@model BiblioContenidos_2.Models.LogOnModel

@{
    ViewBag.Title = "Inicio de Sesión";
}

<h2>Inicio de Sesión</h2>
<p>
    Por favor ingresa tu Nombre de Usuario (Nick) y Contraseña. Ó @Html.ActionLink("Regístrate", "Register") si no tienes una cuenta.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Fallo en el inicio de sesión. Por favor corrige los errores e intenta otra vez.")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Información de la cuenta</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input type="submit" value="Iniciar Sesión" />
            </p>
        </fieldset>
    </div>
}
