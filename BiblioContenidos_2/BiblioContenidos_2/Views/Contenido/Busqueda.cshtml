@model IEnumerable<BiblioContenidos_2.Models.Contenido>
@{
    ViewBag.Title = "Busqueda";
}

<h2>Busqueda</h2>
@{
    
        var data = ViewBag.data;                  
        var grid = new WebGrid(Model, canSort: true, canPage: true, rowsPerPage: 5);
        grid.Pager(WebGridPagerModes.NextPrevious);
                                                                                
        @grid.GetHtml(tableStyle: "webGrid",
                headerStyle: "header",
                alternatingRowStyle: "alt",
                columns: grid.Columns(
                    grid.Column("Tipo", canSort: true, format: @<text>@Html.ActionLink((string)item.Tipo,"VerContenido",new {id=item.Id}, null)</text>),
                    grid.Column("Titulo", "Titulo", canSort: true, format:@<b>@item.Titulo</b>),
                    grid.Column("Descripcion", "Descripcion", format:@<b>@item.Descripcion</b>)

        ));        
}