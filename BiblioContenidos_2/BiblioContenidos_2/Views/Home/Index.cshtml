@using CodeKicker.BBCode;
@using djsolid.BBCodeHelper;

@{
    ViewBag.Title = "Página Principal";
}
<h2>Ultimos libros publicados</h2>
<table>
@foreach(var item in @ViewBag.ListaLibros)
{
    <tr><td><img src="@Url.Action("ObtenerUrlImagen", "Home", new { id = @item.Portada })" alt="" height="50" width="50" /></td>
        <td>@item.Descripcion</td><td>@item.Fecha</td><td>@item.Nick (Karma: @item.Karma)</td>
        <td>@Html.ActionLink("Ver","Index","DetalleLibro", new { id = @item.IdContenido }, null)</td>
    </tr>    
}
</table>


<h2>Ultimos artículos publicados</h2>
<table>
@foreach (var item in @ViewBag.ListaArticulos)
{
    <tr>
        <td>@item.Titulo</td>
        <td>@MvcHtmlString.Create(@BBCode.ToHtml(@item.Descripcion))</td>
        <td>@item.Fecha</td><td>@item.Nick (Karma: @item.Karma)</td>
        <td>@Html.ActionLink("Ver", "VerArticulo", "Contenido", new { id = @item.IdContenido }, null)</td>
    </tr>    
}
</table>

<p>
@Html.ActionLink("Admin", "Index", "Moderacion")<br />
</p>