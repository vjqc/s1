@model IEnumerable<BiblioContenidos_2.Models.Categoria>
@{
    ViewBag.Title = "ModeracionCategorias";
}

<h2>ModeracionCategorias</h2>
<h3>Categorias</h3>
@{
    
        //var data = ViewBag.data;                  
        var grid = new WebGrid(Model, canSort: true, canPage: true, rowsPerPage: 5);
        grid.Pager(WebGridPagerModes.NextPrevious);
                                                                                
        @grid.GetHtml(tableStyle: "webGrid",
                headerStyle: "header",
                alternatingRowStyle: "alt",
                columns: grid.Columns(
                    //grid.Column("Tipo", canSort: true, format: @<text>@Html.ActionLink((string)item.Tipo,"VerContenido","Contenido",new {id=item.Id}, null)</text>),
                    grid.Column("Descripcion", "Descripcion", format:@<b>@item.Descripcion</b>),
                    grid.Column("Estado", "Estado", canSort: true, format: @<b>@item.Estado</b>)
                    
                ));        
}

@using (@Html.BeginForm("ReemplazarCategoria", "Moderacion", FormMethod.Post))
{ 
    <text>Reemplazar </text><input type="text" id="fuente" name="fuente" />
    <text>Por </text><input type="text" id="destino" name="destino" />
    <input type="submit" value="Reemplazar"/>
} 

